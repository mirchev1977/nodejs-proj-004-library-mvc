extends ../layouts/bookShop-layout

block body
    table.all-books
        tr
            th
                a( 
                    href="?sort=title" 
                )="Title".toUpperCase()
            th
                a( 
                    href="?sort=author" 
                )="Author".toUpperCase()
            th
                a( 
                    href="?sort=issuedon" 
                )="IssuedOn".toUpperCase()

        each book in  arrBooksData
            tr
                td=book.title
                td=book.author
                td=book.issuedon
